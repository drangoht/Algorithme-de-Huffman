<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HuffmanWeb.Mobile.Client.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="20,0" Spacing="5">
            <Image Source="splash.svg" />
            <Label Style="{StaticResource maintitle}" Text="Huffman Playground" />
            <Button
                x:Name="EncodeBtn"
                Clicked="EncodeBtn_Clicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Access to encode page"
                Text="Encoder du texte" />
            <Button
                x:Name="DecodeBtn"
                Clicked="DecodeBtn_Clicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Access to decode page"
                Text="Decoder du texte" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
