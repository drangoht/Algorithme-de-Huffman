<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HuffmanWeb.Mobile.Client.Pages.Encode.EncodeMatchingTable"
             Title="Table de correspondance">
    <StackLayout>
        <Label Text="Table de correspondance" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" FontSize="Large"/>
        <ScrollView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
            <StackLayout Margin="5">
                <Frame Margin="5,2" BackgroundColor="Grey" Padding="0,10">
            <CollectionView ItemsSource="{Binding Response.MatchingCharacters}" >
                <CollectionView.Header>
                    <Grid ColumnDefinitions="*,*">
                        <Label Text="CaractÃ¨re" Grid.Column="0" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                        <Label Text="Code" Grid.Column="1" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>

                    <DataTemplate>
                        <Grid 
                          Margin="5,0"
                          BackgroundColor="Black"
                          RowSpacing="1"
                          ColumnSpacing="1"
                          HorizontalOptions="FillAndExpand"
                            ColumnDefinitions="*,*"
                          >
                            
                            <Label BackgroundColor="White" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center"  Grid.Column="0" Text="{Binding Id}" />
                            <Label BackgroundColor="White" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" Grid.Column="1" Text="{Binding Value}" />
                            
                        </Grid>
                    
                </DataTemplate>
                
            </CollectionView.ItemTemplate>
        </CollectionView>
                </Frame>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>