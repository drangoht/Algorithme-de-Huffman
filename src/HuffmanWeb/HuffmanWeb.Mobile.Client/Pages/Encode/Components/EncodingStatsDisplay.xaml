<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="HuffmanWeb.Mobile.Client.Pages.Encode.Components.EncodingStatsDisplay"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout>
        <Grid ColumnDefinitions="*,*,*" RowDefinitions="*">
            <Frame
                Grid.Column="0"
                Margin="5,2"
                Padding="0,10">
                <Label
                    x:Name="OriginalSizeLbl"
                    FontSize="Micro"
                    HorizontalOptions="Center"
                    Text=""
                    VerticalOptions="Center" />
            </Frame>
            <Frame
                Grid.Column="1"
                Margin="5,2"
                Padding="0,10">
                <Label
                    x:Name="EncodedSizeLbl"
                    FontSize="Micro"
                    HorizontalOptions="Center"
                    Text=""
                    VerticalOptions="Center" />
            </Frame>
            <Frame
                Grid.Column="2"
                Margin="5,2"
                Padding="0,10">
                <Label
                    x:Name="CompressionPercentLbl"
                    FontSize="Micro"
                    HorizontalOptions="Center"
                    Text=""
                    VerticalOptions="Center" />
            </Frame>
        </Grid>
    </VerticalStackLayout>
</ContentView>
